---
import Layout from '../layouts/Layout.astro';
import WarCounter from '../components/WarCounter.astro';
import NewsTicker from '../components/NewsTicker.astro';
---

<Layout>
	<main class="flex-grow flex flex-col items-center justify-center p-4 relative overflow-hidden">
		<!-- Background effects -->
		<div class="absolute top-0 left-0 w-full h-full overflow-hidden -z-10 opacity-20 pointer-events-none">
			<div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] bg-blue-600/30 rounded-full blur-[120px]"></div>
			<div class="absolute bottom-[-10%] right-[-10%] w-[40%] h-[40%] bg-yellow-500/20 rounded-full blur-[120px]"></div>
		</div>

		<div class="text-center mb-6 z-10">
			<h1 class="text-4xl md:text-6xl font-black tracking-tighter mb-2 text-slate-300">
				<span>UKRAINE</span>
				<span class="text-slate-600 mx-4 font-thin">|</span>
				<span>RUSSIA</span>
			</h1>
		</div>

		<WarCounter />
		
		<NewsTicker />

		<footer class="mt-8 text-slate-600 text-sm">
			<p>Tracking the duration of the ongoing conflict.</p>
		</footer>
	</main>
</Layout>
