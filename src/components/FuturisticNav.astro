---
// FuturisticNav component
// Futuristic navigation bar with HUD styling

interface NavLink {
  label: string;
  href: string;
  active?: boolean;
}

const links: NavLink[] = [
  { label: 'HOME', href: '/', active: true },
  { label: 'HISTORY', href: '#history', active: false },
  { label: 'UPDATES', href: '#updates', active: false },
  { label: 'DONATE', href: '#donate', active: false },
  { label: 'ABOUT', href: '#about', active: false },
];
---

<nav class="futuristic-nav" aria-label="Main navigation">
  <div class="nav-container">
    <ul class="nav-links">
      {links.map((link) => (
        <li>
          <a 
            href={link.href} 
            class:list={['nav-link', { active: link.active }]}
            aria-current={link.active ? 'page' : undefined}
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>

<style>
  .futuristic-nav {
    width: 100%;
    padding: 1rem 0;
    margin-bottom: 2rem;
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
    border: 2px solid var(--color-cyan);
    border-radius: var(--border-radius-md);
    background: rgba(0, 20, 40, 0.6);
    backdrop-filter: blur(10px);
    box-shadow: var(--glow-sm);
  }

  @supports not (backdrop-filter: blur(10px)) {
    .nav-container {
      background: rgba(0, 20, 40, 0.9);
    }
  }

  .nav-links {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-link {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    padding: 0.5rem 1rem;
    border-radius: var(--border-radius-sm);
    transition: all 0.3s ease;
    position: relative;
  }

  .nav-link:hover {
    color: var(--color-cyan);
    background: rgba(0, 255, 255, 0.1);
    box-shadow: var(--glow-sm);
  }

  .nav-link.active {
    color: var(--color-cyan);
    text-shadow: 0 0 10px var(--color-cyan-glow);
  }

  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60%;
    height: 2px;
    background: var(--color-cyan);
    box-shadow: 0 0 8px var(--color-cyan-glow);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .nav-container {
      padding: 0.75rem 1rem;
    }

    .nav-links {
      gap: 1rem;
      flex-wrap: wrap;
    }

    .nav-link {
      font-size: 0.75rem;
      padding: 0.4rem 0.75rem;
    }
  }

  @media (max-width: 480px) {
    .nav-links {
      gap: 0.5rem;
    }

    .nav-link {
      font-size: 0.7rem;
      padding: 0.3rem 0.5rem;
      letter-spacing: 0.1em;
    }
  }
</style>
